@model RedactApplication.Models.MODELEViewModel
@{
    ViewBag.Title = "Thème 8";
    Layout = "~/Views/Shared/LayoutConnected.cshtml";
}

@section Scripts {
    <link rel="stylesheet" href="~/Content/css/elements/sites-creation.css">

    <script type="text/javascript" src="~/Scripts/codetemplate.js"></script>
    <script type="text/javascript" src="//cdn.tinymce.com/4/tinymce.min.js"></script>

}

<main id="wrapper">
    <div id="single-container">
        <div class="onglets ease-in-out">
            <ul>
                <li> @Html.ActionLink("Dashboard", "ListTemplate", new { controller = "Template" }) </li>
                <li> @Html.ActionLink("Creation Site", "ChoiceTemplate", new { controller = "Template" }, new { @class = "active" })</li>
                @if (Session["name"] != null && @Session["role"] != null && @Session["role"].ToString() != "6")
                {
                    <li> @Html.ActionLink("Utilisateurs", "ListeUserTemplate", new { controller = "Home" }) </li>
                }
            </ul>
        </div>
        <div class="theme-select grey-bg">
            <section class="clearfix container">
                <div class="row">
                    <a href="" class="col-md-3 selected">
                        <div class="thumb with-shadow"><img src="images/theme8_thumb.jpg" /></div>
                        <span>Thème 8</span>
                    </a>
                </div>
            </section>
        </div>
        @using (Html.BeginForm("SaveTheme", "Template", FormMethod.Post, new { @class = "formfields", enctype = "multipart/form-data" }))
        {
            <section class="theme-customization clearfix">
                <div class="section-title">
                    <span>Identité de votre site</span>
                </div>

                <div class="row site-identity">
                    <div class="col-md-6">
                        <div class="blk">
                            <strong>Logo (*)</strong>
                            @Html.TextBoxFor(m => m.logoUrl, new { type = "file", accept = "image/*", name = "file", id = "logoUrl",  required = true })
                            <label for="logoUrl" class="btn-upload"><span class="file-name">Choisir un fichier</span></label><i class="remove-file">&times;</i>
                            <p>Image au format JPG, PNG ou GIF</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="blk">
                            <strong>L'url de votre site (*)</strong>
                            @Html.TextBoxFor(m => m.site_url, new { placeholder = "www.example.com", required = true, type = "url" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="blk">
                            <strong>Choisir un favicon (*)</strong>
                            @Html.TextBoxFor(m => m.favicone, new { type = "file", accept = "image/*", name = "file", id = "favicone" })
                            <label for="favicone" class="btn-upload"><span class="file-name">Choisir un fichier</span></label><i class="remove-file">&times;</i>
                            <p>Image au format JPG, PNG ou GIF</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="blk">
                            <strong>Nombre de menu</strong>
                            <select id="nb-menu" name="nbmenu">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                    </div>                    
                </div>

                <!-- contenu bloc 1 -->
                <div class="section-title">
                    <span>Contenu du site</span>
                </div>
                <div class="content-to-show">
                    <!-- TAB NAVIGATION -->
                    <ul id="tab-navigation">
                        <li><a href="#" data-content="menu1" id="fire-menu1">Accueil</a></li>
                        <li><a href="#" data-content="menu2" id="fire-menu2">Menu 2</a></li>
                        <li><a href="#" data-content="menu3" id="fire-menu3">Menu 3</a></li>
                        <li><a href="#" data-content="menu4" id="fire-menu4">Menu 4</a></li>
