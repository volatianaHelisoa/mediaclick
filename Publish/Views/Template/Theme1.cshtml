<script>
    jQuery(document).ready(function () {
        jQuery("#menu1").hide();
        jQuery("#menu2").hide();
        jQuery("#menu3").hide();
        jQuery("#menu4").hide();



        $('#nb-menu').change(function () {
            jQuery("#menu1").hide();
            jQuery("#menu2").hide();
            jQuery("#menu3").hide();
            jQuery("#menu4").hide();

            if ($('#nb-menu option:selected').val() == 0) {
                return;
            }
            else {
                var nbmenu = $('#nb-menu option:selected').val();

                console.log(nbmenu);
                var i = 1;
                while (i <= nbmenu) {
                    jQuery("#menu" + i).show();
                    i++;
                }
            }
        });


    });
</script>
<script type="text/javascript" src="~/Scripts/codetemplate.js"></script>
