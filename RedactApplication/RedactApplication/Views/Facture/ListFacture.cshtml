@model RedactApplication.Models.FACTUREViewModel
@{
    if (Model != null)
    {
        ViewBag.Title = "Facture";
        ViewBag.FactureId = Model.factureId;
    }
    Layout = "~/Views/Shared/LayoutConnected.cshtml";
}

@section css
{
    <link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/elements/commandes.css">
    <link href="@Url.Content("~/Content/css/dataTables.css")" rel="stylesheet" />
    <link href="~/Content/themes/smoothness/jquery-ui.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/codescript.js")"></script>
    <script>
        $("ul.LinkSearchClear").css("display", "none");
    </script>

}
<main class="wrapperpages">
    <div>
        <section>
            <div class="page pagesDivision clear">
                <section class="column2 rightDivision fullWidth">
                    <div class="rowpad">
                        <div>
                            <div class="admin-link-menu">

                                <a href="~/Home/ListeFacture" class="admin-link ">Utilisateurs</a>
                                <a href="~/Commandes/ListCommandes" class="admin-link">Commandes</a>
                                <a href="~/Facture/ListFacture" class="admin-link active">Factures</a>
                            </div>
                            <!-- end admin menu -->
                        </div>
                        <div id="divisionContent">
                            <div class="breadcrumb">
                                <span>Factures</span>
                                <hr />
                            </div>

                            <!-- top panel -->
                            <div id="inner-top-panel" class="showpanel clear">
                                <div class="left search-bloc">
                                    @using (Html.BeginForm("FactureSearch", "Facture", FormMethod.Post, new { @class = "facture-srch" }))
                                    {
                                        <div class="usr-srch--input-wrapper">
                                            @Html.AntiForgeryToken()
                                            <i class="fa fa-times-circle cancelText"></i>
                                            <input class="usr-srch--input" type="search" placeholder="Search" name="searchValue" id="ValFactureSearch" title="Search...">
                                        </div>
                                        <input class="usr-srch--submit" type="submit" value="&#xf002;" id="FactureSearchSubmit">
                                    }
                                </div>
                                <div class="right usr-create">
                                    <input type="submit" value="Créer une facture" class="green-btn" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new { controller = "Facture", action = "Create" }) + "'");">
                                </div>
                            </div>
                            <!-- end top panel -->
                            <div class="select_cat">
                                <span>Select</span>
                                <ul>
                                    <li><a href="#" onclick="CheckedClick()">All</a></li>
                                    <li><a href="#" onclick="DecheckedClick()">None</a></li>
                                    <li class="line"></li>
                                    <li><a href="#" onclick="DeleteAllFactureSelected(@ViewBag.nbrow)">Delete selection</a></li>
                                </ul>
                                <ul class="LinkSearchClear">
                                    <li class="line"></li>
                                    <li><a href="~/Facture/ListFacture">Clear</a></li>
                                </ul>
                            </div>
                            <div class="tab_fx tab_fxs">
                                <table id="myDataTable" class="trig_table table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" class="checkbox" onclick="ClickAllFactureInListFacture()" id="checkAllFacture" />
                                            </th>
                                            <th>N° facture </th>
                                            <th>Date d’émission</th>
                                            <th>Période concerné</th>
                                            <th>Montant facture</th>
                                            <th>Etat</th>
                                            <th class="option">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="t1">
                                        @if (ViewBag.listeFactureVm != null)
                                        {

                                            foreach (var item in ViewBag.listeFactureVm)
                                            {
                                                <tr>
                                                    <td><input type="checkbox" class="checkbox" name="selectedFacture" value="@item.factureId" /></td>
                                                    <td>@item.factureNumero</td>
                                                    <td>@item.dateEmission</td>
                                                    <td>@item.periode</td>
                                                    <td>@item.montant</td>
                                                    <td>
                                                        @if (@item.etat == false)
                                                        {
                                                            <span>Non payé</span>
                                                        }
                                                        else if (@item.etat == true)
                                                        {
                                                            <span>Payé</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="option">
                                                            <a href="~/Facture/Details/@item.factureId" title="Détails"><i class="fa fa-eye"></i></a>
                                                            <a onclick="DeleteFactureClick('@item.factureId')" title="Supprimer Facture"><i class="fa fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>

                                            }
                                            if (ViewBag.listeFactureVm.Count == 0)
                                            {
                                                <tr><td>No records found.</td></tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>
</main>

<div id="DeleteDatadialog" style="display: none">
    @Html.Partial("~/Views/Facture/ErrorNoSelection.cshtml")
</div>
<div id="SearchFactureNoResultat" style="display: none">
    @Html.Partial("~/Views/Shared/SearchNoResultat.cshtml")
</div>
<!--  Dialogue de confirmation suppression d'utilisateur  -->
<div id="deleteAllFacturePoPup" style="display: none">
    @Html.Partial("~/Views/Facture/DeleteFacture.cshtml")
</div>

<script>
    /*pour la suppression des utilisateurs séléctionnés*/
    var DeleteFactureClick = function (facture) {
        //  alert(facture);
        if (facture !== '') {

            $.ajax({
                type: 'POST',
                url: '/Facture/SelecteAllFactureToDelete',
                data: { hash: facture },
                error: function (ex) {
                    alert('Error: ' + ex.statusText);
                },
                success: function () {
                    $("#deleteAllFacturePoPup").modal();
                },
                async: true,
                processData: true
            });
        }
    }

    var DeleteAllFactureSelected = function (nbrow) {
        var ListFactureId = '';
        $('input[name="selectedFacture"]:checked').each(function () {
            ListFactureId += $(this).val() + ',';
        });
        if (ListFactureId != '') {
            $.ajax({
                type: 'POST',
                url: '/Facture/SelecteAllFactureToDelete',
                data: { hash: ListFactureId.substring(0, (ListFactureId.length - 1)) },
                error: function (ex) {
                    //alert('Error: ' + ex.statusText);
                },
                success: function () {
                    $("#deleteAllFacturePoPup").modal();
                },
                async: true,
                processData: true
            });
        } else {
            $("#DeleteDatadialog").modal();
        }
    }

    var ListFactureData = function () {
        var selectBox = document.getElementById("nbrowpage");
        var nbrow = selectBox.options[selectBox.selectedIndex].value;
        $.ajax({
            type: 'POST',
            url: '/Home/ReInitPagination',
            data: { hash: "paginationChange" },
            success: function (data) {
                window.location.href = nbrow;
            }
        });
    }

</script>




