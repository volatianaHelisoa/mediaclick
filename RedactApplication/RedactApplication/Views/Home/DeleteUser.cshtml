
@{
    ViewBag.Title = "Supprimer l'utilisateur";

}

<div class="flex-content flex-jcenter-acenter flex-col pop-up">
    <div class="popup-container with-shadow">
        <div class="head gradient-blue">
            <h1>Attention !</h1>
        </div>
        <div class="content-section text-centered icon-bottom">
            <i class="pop-icon green-bg"></i>
            <p>Voulez-vous vraiment supprimer la sélection ?</p>
            @if (@Session["role"] != null && @Session["role"].ToString() == "4")
            {
                using (Html.BeginForm("ListeUser", "Home", FormMethod.Post))
                {
                    @Html.ActionLink("Supprimer", "DeleteAllUserSelected", new { controller = "Home" }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Annuler" class="btn btn-warning" onclick="DecheckedClick()">
                }
            }
            else if (@Session["role"] != null && @Session["role"].ToString() == "5")
            {
                using (Html.BeginForm("ListeUserTemplate", "Home", FormMethod.Post))
                {
                    @Html.ActionLink("Supprimer", "DeleteAllUserSelected", new { controller = "Home" }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Annuler" class="btn btn-warning" onclick="DecheckedClick()">
                }
            }
        </div>
    </div>

</div>