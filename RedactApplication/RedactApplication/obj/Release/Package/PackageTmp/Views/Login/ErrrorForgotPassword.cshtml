@model RedactApplication.Models.UTILISATEURViewModel
@{
    ViewBag.Title = "Mot de passe invalide";
}

<div class="flex-content flex-jcenter-acenter flex-col pop-up">
    <div class="popup-container with-shadow">
        <div class="head gradient-blue">
            <h1>>OUPS !</h1>
        </div>
        <div class="content-section text-centered icon-bottom">
            <i class="pop-icon green-bg"></i>
            <p>Mot de passe invalide.</p>
            @foreach (var val in @ViewBag.ErrorPassWord)
            {
                <p style="text-align:left;">@val</p>
            }

            <button type="submit" class="btn btn-primary" onclick="@("window.location.href='" + @Url.RouteUrl("Home", new { controller = "Login", action = "UpdatePassword", token = @ViewBag.userId }) + "'");">Ok</button>

        </div>
    </div>

</div>